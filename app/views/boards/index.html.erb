<h1>All boards</h1>

<hr>

<div>
    <h2>
      Add a new board
    </h2>

    <form action="/insert_board" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Add board
      </button>
    </form>
</div>

<hr>

<ul>
  <%= @list_of_boards.each do |a_board| %>
    <li>
     <%= a_board.name %>
    </li>
    <%= end %>
</ul>
  